  <div id="bar" class="row">
      <div class="two columns">
          <a href="about"><img class="logo" src="/imgs/logo2.png"></a>
      </div>
      <div id="signin" class="eight columns offset-by-two">
        <form id="signin_form" action="/signin" method="POST">
          <input type="email"  autocomplete="on" placeholder="Email" name="email"/>
          <input type="password"  autocomplete="off" placeholder="Password" name="password"/>
          <input type="submit" value="Sign in"/>
          <% if flash[:alert] %>
            <span id="flash"><%= flash[:alert] %></span>
          <% end %>
        </form>
      </div>
  </div>
  
<div class="row">
<div class="six columns">
 <% if @user.errors.full_messages.any? %>   
  <ul>
    <% @user.errors.full_messages.each do |error_message| %>
    <li><%= error_message %></li><br>    
    <% end %>
  </ul> 
<% end %>
</div>
</div>



  <div id="tag_line" class="row">
    <div class="eight columns offset-by-two">
    <h2>The Stories That Surround You.</h2>
    </div>
  </div>

  <div id="middle" class="row">
    <div class="three columns">
      <h6>An app designed for you to speak to the world. Say what you feel, think, believe, and experience.</h6>
      <img src="/imgs/talk.png">
    </div>
    <div class="three columns">
      <h6>Write something and post it anonymously while in a location.</h6>
      <img id="book" src="/imgs/journal.png">
    </div>
    <div class="three columns">
       <h6>Anyone within a mile will be able to see what you've written...</h6>
       <img src="/imgs/compass.png">
    </div>
    <div class="three columns">
       <h6>and only see it when they are physically in that location.</h6>
       <img src="/imgs/footprints.png">
    </div>
  </div>

  <div id="signup" class="row">
    <div class="four columns offset-by-four">
        <h3>Discover</h3>
        <form class="form" action="/signup" method="POST">
          <input type="email" class="email" required="required" autocomplete="on" placeholder="Email" name="email"/>
          <input type="password" required="required" autocomplete="off" placeholder="Password" name="password"/>
          <input type="password" required="required" autocomplete="off" placeholder="Confirm Password" name="password_confirmation"/>
          <input type="submit" value="Sign up"/>
        </form>
    </div>
  </div>

